      label=(t "forms.i-i-s-c-r-mj-сделка-e.заявка.товары.наименование-caption")
      data-test-i-i-s-c-r-mj-сделка-e-заявка-товары-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.заявка.товары "наименование" "message")}}
  </div>
